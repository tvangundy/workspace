# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

incus_remote_name = "nuc"

cluster_name = "talos-vm-cluster"

# VM names
control_plane_vm_name = "talos-cp"
worker_0_vm_name      = "talos-worker-0"
worker_1_vm_name      = "talos-worker-1"

# IP addresses (must be on the same network as IncusOS host)
control_plane_ip = "192.168.2.84"
worker_0_ip      = "192.168.2.25"
worker_1_ip      = "192.168.2.74"

# MAC addresses (optional - leave empty for auto-assignment)
# Set these to ensure VMs get the same MAC address when recreated
# Get current MACs with: task tc:mac-addresses
# Format: "aa:bb:cc:dd:ee:ff" (lowercase, colons)
control_plane_mac = ""
worker_0_mac      = ""
worker_1_mac      = ""

# VM resources
control_plane_memory = "2GB"
control_plane_cpu    = "2"
worker_memory        = "2GB"
worker_cpu           = "2"

# Talos image alias (must be imported first using incus image import)
# Example: incus image import contexts/talos-vm/devices/talos/talos-metal-amd64.qcow2 nuc: --alias talos-v1.12.0-metal-amd64
talos_image_alias = "talos-v1.12.0-metal-amd64"

# Talos version
talos_version = "v1.12.0"

# Physical network interface name
physical_network_name = "eno1"

# Storage pool name (check with: incus storage list)
storage_pool = "local"

# Common configuration patches (optional)
# This allows you to add common configuration to all nodes, such as kernel modules or sysctls
# Example for br_netfilter kernel module:
# common_config_patches = <<EOF
# "machine":
#   "kernel":
#     "modules":
#     - "name": "br_netfilter"
#   "sysctls":
#     "net.bridge.bridge-nf-call-iptables": "1"
#     "net.bridge.bridge-nf-call-ip6tables": "1"
# EOF
common_config_patches = ""

